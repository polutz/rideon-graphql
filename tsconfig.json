{
    "compilerOptions": {
        "noImplicitAny": false,
        "removeComments": true,
        "preserveConstEnums": false,
        "target": "ES6",
        "sourceMap": false,
        "listFiles": false,
        "outDir": ".temp/js",
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "typings/**/*.d.ts",
        "src/**/*.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.test.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}